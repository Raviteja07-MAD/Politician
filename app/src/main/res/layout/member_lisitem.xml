<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginRight="12dp"
    android:layout_marginBottom="12dp"
    android:id="@+id/mem_lay"
    android:background="@color/yashbg">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="true"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/listitembg">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/hme_pductlist_img"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:background="@drawable/kcr_one_pleanary"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@color/black_transprent"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="0.2"
                        android:gravity="center">

                        <com.o3sa.politician.customfonts.CustomBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Indrakaran"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textSize="14dp" />

                        <com.o3sa.politician.customfonts.CustomRegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="123456789"
                            android:singleLine="true"
                            android:visibility="gone"
                            android:textColor="@color/white"
                            android:textSize="14dp" />

                        <com.o3sa.politician.customfonts.CustomRegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LB Nagar"
                            android:singleLine="true"
                            android:visibility="gone"
                            android:textColor="@color/white"
                            android:textSize="14dp" />

                        <com.o3sa.politician.customfonts.CustomRegularTextView
                            android:id="@+id/relation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MLA"
                            android:textColor="@color/white"
                            android:textSize="12dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:layout_gravity="bottom"
                        android:gravity="right"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/membrs_dots_image"
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:padding="6dp"
                            android:tint="@color/white"
                            android:src="@drawable/more"
                            android:visibility="visible" />

                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

